  :geometry (geometry 
              :x "0%"
              :y "0%"
              :width 50
              :height "100%"
              :anchor "center left"
              )
  :stacking "bottom"
  :exclusive false
  :monitor 0
  :wm-ignore false
  (box 
    :class "fakecornersl ${ locked ? 'active' : 'inactive'}"))

(defwindow fakecornerr
  :geometry (geometry 
              :x "0%"
              :y "0%"
              :width 50
              :height "100%"
              :anchor "center right"
              )
  :stacking "bottom"
  :exclusive false
  :monitor 0
  :wm-ignore false
  (box 
    :class "fakecornersr ${ locked ? 'active' : 'inactive'}"))

